#include <iostream>
#include <chrono>
#include <thread>

using namespace std;

void printStars(int n) {
    for (int i = 0; i < n; ++i) {
        cout << "*";
        this_thread::sleep_for(chrono::seconds(1));
    }
    cout << endl;
}

void printNum(int n) {      // 여기 수정해야함
    for (int k = 1; k <= n; ++k) {
        cout << k;
        this_thread::sleep_for(chrono::seconds(1));
    }
    cout << endl;
}

int main() {
    int line, lines;
    int num;

    cout << "번호를 입력하시오" << endl;
    cout << "==================================================================================================================" << endl;
    cout << "1: 입력한 숫자로 줄을 정한 후 1초간 간격으로 별 찍기(문제 1,2번이 같은 맥락인것 같아 한번에 만들었습니다.)" << endl;
    cout << "2: 별 대신에 숫자로 만들기" << endl;
    cout << "==================================================================================================================" << endl;

    cin >> num;

    switch (num)
    {
    case 1:
        cout << "몇줄로 할 것인지 작성하시오: ";
        cin >> line;
        break;

    case 2:
        cout << "몇줄로 할 것인지 작성하시오: ";
        cin >> lines;
        break;

    default:
        break;
    }


   

    for (int i = 1; i <= line; ++i) {
        printStars(i);
    }

    for (int j = 1; j <= lines; ++j) {
        printNum(j);
    }

    return 0;
}
